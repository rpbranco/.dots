set number
set nowrap
set showbreak=+++
" set textwidth=100
set showmatch
 
set hlsearch
set smartcase
set ignorecase
set incsearch
 
set autoindent
set expandtab
set shiftwidth=2
set smartindent
set smarttab
set softtabstop=2
 

set ruler
 
set undolevels=1000
set backspace=indent,eol,start

set hidden

nnoremap <Tab> :bn<CR>
